%description
IBus template project

%prep
%setup -q

%build
%configure --disable-static
# make -C po update-gmo
make %{?_smp_mflags}

%install
rm -rf $RPM_BUILD_ROOT
make DESTDIR=${RPM_BUILD_ROOT} install
rm -f $RPM_BUILD_ROOT%{python_sitelib}/_m17n.la

# %find_lang %{name}

%clean
rm -rf $RPM_BUILD_ROOT

%files
# -f %{name}.lang
%defattr(-,root,root,-)
%doc AUTHORS COPYING README
%{python_sitelib}/_m17n.so
%{python_sitelib}/m17n.py*
%dir %{_datadir}/ibus-m17n
%{_datadir}/ibus-m17n/*
%{_libexecdir}/ibus-engine-m17n

